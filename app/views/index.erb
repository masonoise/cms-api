<!DOCTYPE html>
<html lang="en">
<head>
  <title>CMS</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="">

  <!-- Le styles -->
  <link href="/stylesheets/bootstrap.css" rel="stylesheet">
  <style>
    body {
      padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
    }
  </style>
  <link href="/stylesheets/bootstrap-responsive.css" rel="stylesheet">

  <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
<body>

<div class="container">
<div class="row">
<div class="span12">
  <h1>CMS</h1>

  <div style="color:red;" id="results"></div>
  <br/><br/>
</div>
</div>

<div class="row">
<div class="span6">

  <h2>Current content items:</h2>

  <ul id="tab" class="nav nav-tabs">
    <li class="active"><a href="#text_list_published" data-toggle="pill">Published</a></li>
    <li><a href="#text_list_draft" data-toggle="pill">Draft</a></li>
  </ul>

  <div id="my-tab-content" class="tab-content">
    <div class="tab-pane fade in active" id="text_list_published">
      <div id="text_list_published_content">Loading list...</div>
    </div>
    <div class="tab-pane fade" id="text_list_draft">
      <div id="text_list_draft_content">Loading list...</div>
    </div>
   </div>
</div>

<div class="span6">
  <h2>Add new text item:</h2>

  <form class="well" action="#" id="post_form">
      <label>Title</label>
      <input type="text" name="title" id="title" class="span3" placeholder="Enter content title"/>
      <label>Content</label>
      <input type="text" name="content" id="content" class="span5"/>
      <label>Page</label>
      <input type="text" name="page" id="page" class="span2"/>
      <label>Block</label>
      <input type="text" name="block" id="block" class="span2"/>
      <br/>
      <button type="submit" class="btn"/>Submit</button>
  </form>

</div>

</div>

</div>

<script src="/scripts/jquery-1.7.1.min.js"></script>
<script src="/scripts/cms_work.js"></script>
<script language="javascript">
    // This sucks. It is just so we can call a JQuery function, which is defined in cms_work.js
    // In there it declares the function, then assigns it to this global variable. Sorry about that.
    text_list_function = null;

    $('#text_list_published').tab('show');

    var delete_item = function (content_id) {
        $.ajax({
            type:"POST",
            url:"/api/v1/cms/text/" + content_id,
            data:{ delete:'true' },
            success:function (data) {
                $('#results').text(data.result);
                text_list_function();     // Now we can call the hidden JQuery function to redraw the list
            }
        });
    }
</script>
<script src="/scripts/bootstrap-tab.js"></script>
</body>
</html>
